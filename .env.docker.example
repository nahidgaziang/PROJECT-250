# Docker Environment Variables
# Copy this file to .env.docker for production deployment

# MySQL Configuration
MYSQL_ROOT_PASSWORD=secure_root_password_change_me
MYSQL_PASSWORD=secure_user_password_change_me

# JWT Secret (CRITICAL: Generate a secure random string for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production

# Backend API URL (for production, change to your domain)
VITE_API_URL=http://localhost:3001/api

# Groq API Key
VITE_GROQ_API_KEY=your_groq_api_key_here
